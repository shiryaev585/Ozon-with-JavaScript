{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": "off",
        "no-trailing-spaces": "off",
        "max-len": [
            2,
            100,
            {
                "ignoreUrls": true,
                "ignorePattern": "import|export"
            }
        ],
        "no-console": 1,
        "no-var": 1,
        "no-unused-expressions": [
            2,
            {
                "allowShortCircuit": true,
                "allowTaggedTemplates": true,
                "allowTernary": true
            }
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "indent": ["error", 4]
    }
}
